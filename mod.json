		"hjfod.gmd-api": {
			"importance": "required",
			"version": ">=v1.4.0"
		},
		"geode.node-ids": {
			"importance": "required",
			"version": ">=v1.20.0"
		}
	},
	"tags": [
		"gameplay",
		"content",
		"utility"
